<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hezhu.myapplication">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Dark">
        <activity
            android:name=".SignUpActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Dark.Login" />
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Dark.Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CameraActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Dark" />

        <meta-data
            android:name="com.google.android.gms.vision.DEPENDENCIES"
            android:value="face" />

        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Light" />
        <activity
            android:name=".CardActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Light.WithActionBar" />
        <activity
            android:name=".CardAddActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Light.WithActionBar" />
        <activity
            android:name=".CardCameraActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".CardAddDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Light.WithActionBar" />
        <activity
            android:name=".CardConfirmedActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Light.WithActionBar" />
        <activity
            android:name=".CropImageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Light.WithActionBar" />
        <activity
            android:name=".CardDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Light.WithActionBar" />
        <activity android:name=".QRCodeActivity"></activity>
    </application>

</manifest>